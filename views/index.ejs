<html lang="en">
  <%- include('./partials/head.ejs')%>
  <body>
    <%- include('./partials/nav.ejs')%>

    <div id="main">
      <h2 id="heading">All Blogs</h2>
      <% if(blogs.length >0){ %> <% blogs.forEach( blog =>{%>
      <div class="container">
        <a class="blogs" href="/blogs/<%= blog.id %>">
          <h3><%=blog.title%></h3>
          <p><%=blog.snippet%></p>
        </a>
      </div>
      <%})%> <% } else {%>
      <p id="error-msg">There is no blog to display</p>
      <%}%>
    </div>

    <%- include('./partials/footer') %>
  </body>
</html>
